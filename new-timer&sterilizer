#include<LiquidCrystal.h>
#define BUTTON 3
#define buzzer 2//计时完毕蜂鸣器
#define LED 8//消毒完毕提示灯
LiquidCrystal lcd(A0,A1,12,11,10,9);
int val=0;//储存紫外灯按钮状态
int old_val=0;
int state=0;//0紫外灯关闭1打开
int H=6;
int M=0;
int S=0;
void setup() {
  lcd.begin(16,2);
  lcd.setCursor(0,0);
  lcd.print("Youhaveusedfor:");
  for(int UVLED=4;UVLED<=7;UVLED++){
   pinMode(UVLED,OUTPUT); 
   }
   pinMode(LED,OUTPUT);
  pinMode(BUTTON,INPUT);
}
void loop() {
  lcd.setCursor(0,1);
  start_timer();
  val=digitalRead(BUTTON);//读取按钮输入并存储，检查变化情况
  if((val==HIGH)&&(old_val==LOW)){
    state=1-state;
    delay(1000);
    }
    old_val=val;//暂存
    if(state==1){
      for(int UVLED=4;UVLED<=7;UVLED++){
       digitalWrite(UVLED,HIGH);}
       delay(900000);//消毒时间15分钟
       digitalWrite(LED,HIGH);
       delay(5000);}
      else{
        for(int UVLED=4;UVLED<=7;UVLED++){
       digitalWrite(UVLED,LOW); 
       }
        digitalWrite(LED,LOW);}
}
void start_timer(){
  if(H==0&&M==0&&S==0){
    lcd.setCursor(0,1);
    lcd.print("time is up");
    digitalWrite(buzzer,HIGH);
    delay(1000);
    digitalWrite(buzzer,LOW);
    delay(1000);
    }
    else if(S<0){
      S=59;
      M=M-1;}
      else if(M<0){
        M=59;
        H=H-1;}
        else{
          lcd.setCursor(0,1);
          lcd.print(H);
          lcd.print(":");
          lcd.setCursor(2,1);
          lcd.print(M);
          lcd.print(":");
          lcd.setCursor(5,1);
          lcd.print(S);
        }  }
